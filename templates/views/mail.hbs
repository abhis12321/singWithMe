    <script>
        let prev = null;

        const handlePrev = e => {
            let par = e.target.parentElement.parentElement.previousElementSibling;
            if(par) {
                let audio = par.getElementsByClassName('audio')[0];                      
                if(audio.paused) {
                    if(prev) pause(prev);            
                    play(par);
                }
                else {  
                    pause(par);
                }                
                prev = par;
            }
        }
        const handleNext = e => {
            let par = e.target.parentElement.parentElement.nextElementSibling;
            if(par) {
                let audio = par.getElementsByClassName('audio')[0];                      
                if(audio.paused) {
                    if(prev) pause(prev);            
                    play(par);
                }
                else {  
                    pause(par);
                }                
                prev = par;
            }
        }


        const handlePlay =  e => {
            let par = e.target.parentElement.parentElement;   
            let audio = par.getElementsByClassName('audio')[0];             
                
            if(audio.paused) {
                if(prev) pause(prev);            
                play(par);
            }
            else {  
                pause(par);
            }                
            prev = par;
        }
        const play = par => {
            let audio = par.getElementsByClassName('audio')[0];
            let play = par.getElementsByClassName('fa-solid')[1];
            let img = par.getElementsByClassName('nr')[0];
            let hidden = par.getElementsByClassName('hidden');
            

            audio.play();
            console.log(play , img , hidden[0] , hidden[1]);
            img.classList.replace('nr' , 'rotate');
            play.classList.replace('fa-play' , 'fa-pause');
            hidden[0].classList.replace('hidden' , 'hd');
            hidden[0].classList.replace('hidden' , 'hd');
        }
        const pause = par => {
            let audio = par.getElementsByClassName('audio')[0];
            let play = par.getElementsByClassName('fa-solid')[1];
            let img = par.getElementsByClassName('rotate')[0];
            let hidden = par.getElementsByClassName('hd');
            
            audio.pause();
            play.classList.replace('fa-pause' , 'fa-play');
            img.classList.replace('rotate' ,'nr');
            hidden[0].classList.replace('hd' , 'hidden');
            hidden[0].classList.replace('hd' , 'hidden');
        }
    </script>
